{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "module": "commonjs",
        "outDir": "dist",
    },
    "include": [
        "src/scripts/"
    ],
    "files": [
        "index.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}